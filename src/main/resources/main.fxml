<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller">
   <children>
      <TextField fx:id="hostField" layoutX="14.0" layoutY="14.0" promptText="Host address" />
      <TextField fx:id="usernameField" layoutX="176.0" layoutY="14.0" promptText="Username" />
      <Button fx:id="connectButton" layoutX="501.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleConnect" text="Connect" />
      <PasswordField fx:id="passwordField" layoutX="340.0" layoutY="14.0" promptText="Password" />
      <Button fx:id="disconnectButton" layoutX="573.0" layoutY="14.0" mnemonicParsing="false" onAction="#handleDisconnect" text="Disconnect" />
      <TreeView fx:id="remoteDirTree" layoutX="14.0" layoutY="100.0" prefHeight="459.0" prefWidth="300.0" />
      <ListView fx:id="directoryContent" layoutX="340.0" layoutY="100.0" prefHeight="208.0" prefWidth="220.0" />
      <Button fx:id="retrieveButton" layoutX="340.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleRetrieve" text="Retrieve" />
      <TextField fx:id="storePathField" layoutX="15.0" layoutY="56.0" prefHeight="26.0" prefWidth="546.0" promptText="Path to store" />
      <Button fx:id="storeButton" layoutX="415.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleStore" text="Store" />
      <Button fx:id="deleteButton" layoutX="475.0" layoutY="317.0" mnemonicParsing="false" onAction="#handleDelete" text="Delete" />
   </children>
</AnchorPane>
